<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Packages -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.authentication.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WelcomeController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.welcome.WelcomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PeopleZoneServlet</servlet-name>
        <servlet-class>com.group03.loveit.controllers.people_zone.PeopleZoneController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.ChatController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostDetailsController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.post_details.PostDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePostController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.people_zone.CreatePostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCommentController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.post_details.CreateCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FavoritesController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.favorites.FavoritesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFavoriteController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.favorites.RemoveFavoriteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.profile.UserProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.admin.AdminController</servlet-class>
    </servlet>
    <!-- Mappings -->
    <servlet>
        <servlet-name>OtherProfileController</servlet-name>
        <servlet-class>com.group03.loveit.controllers.profile.OtherProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelcomeController</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PeopleZoneServlet</servlet-name>
        <url-pattern>/people-zone</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileController</servlet-name>
        <url-pattern>/user-profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatController</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostDetailsController</servlet-name>
        <url-pattern>/post-details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePostController</servlet-name>
        <url-pattern>/create-post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateCommentController</servlet-name>
        <url-pattern>/create-comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FavoritesController</servlet-name>
        <url-pattern>/favorites</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveFavoriteController</servlet-name>
        <url-pattern>/remove-favorite</url-pattern>
    </servlet-mapping>
    <!-- Session -->
    <servlet-mapping>
        <servlet-name>OtherProfileController</servlet-name>
        <url-pattern>/other-profile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
    <!-- Context Param -->
    <context-param>
        <param-name>USER_SESSION</param-name>
        <param-value>USER_SESSION</param-value>
    </context-param>
    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>welcome</welcome-file>
    </welcome-file-list>
</web-app>
